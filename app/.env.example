# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# ID администраторов (через запятую)
ADMIN_IDS=123456789,987654321

# URL базы данных
# Для SQLite (локальная разработка):
DATABASE_URL=sqlite:///betting_bot.db
# Для PostgreSQL (продакшн):
# DATABASE_URL=postgresql://user:password@host:port/database

# Настройки ставок
MIN_BET_AMOUNT=10.0
MAX_BET_AMOUNT=10000.0
DEFAULT_ODDS=2.0

# Комиссия дома (5%)
HOUSE_EDGE=0.05

# Временная зона
TIMEZONE=UTC

# Настройки для развертывания
PORT=8000
WEBHOOK_URL=https://your-app.herokuapp.com/webhook
